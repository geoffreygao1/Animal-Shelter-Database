@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;

<h1>Animals</h1>

@if (@Model.Count == 0)
{
  <h3>No animals are in the shelter yet</h3>
}

@foreach (Animal animal in Model)
{
  <li>@Html.ActionLink($"{animal.Name},({animal.Type}, {animal.Breed})", "Details", new { id = animal.AnimalId }) </li>
}

<p>@Html.ActionLink("Add new animal", "Create")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
